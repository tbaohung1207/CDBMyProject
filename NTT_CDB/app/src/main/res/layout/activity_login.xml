<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity">

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="well come to"
        android:layout_marginBottom="20dp"
        android:textSize="30sp"/>
    <EditText
        android:layout_above="@+id/view_anchor"
        android:id="@+id/edt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User ID"
        android:layout_marginBottom="10dp"
        />
    <View
        android:layout_centerInParent="true"
        android:id="@+id/view_anchor"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_below="@+id/view_anchor"
        android:id="@+id/edt_passworld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User ID"
        />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edt_passworld"
        android:id="@+id/txt_validation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/btn_login"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txt_validation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"/>
    <Button
        android:id="@+id/btn_facebook"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facebook"/>
    <Button
        android:id="@+id/btn_twitter"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/btn_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="twitter"/>
    <Button
        android:id="@+id/btn_instagram"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/btn_twitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="instagram"/>


</RelativeLayout>
